generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  posts          Post[]
  socialAccounts SocialAccount[]

  @@map("users")
}

model SocialAccount {
  id        Int      @id @default(autoincrement())
  imageUrl  String?
  name      String
  platform  String
  handle    String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  posts     Post[]   @relation("PostToSocialAccount")

  @@map("social_accounts")
}

model Post {
  id             Int             @id @default(autoincrement())
  content        String
  imageUrl       String?
  scheduledAt    String
  status         String          @default("SCHEDULED")
  userId         Int
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  user           User            @relation(fields: [userId], references: [id])
  socialAccounts SocialAccount[] @relation("PostToSocialAccount")

  @@map("posts")
}
