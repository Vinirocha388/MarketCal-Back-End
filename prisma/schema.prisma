generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model SocialAccount {
  id       Int    @id @default(autoincrement())
  name     String
  platform String
  handle   String
  userId   Int

  @@map("social_accounts")
}

model Post {
  id          Int     @id @default(autoincrement())
  content     String
  imageUrl    String?
  scheduledAt String
  status      String  @default("SCHEDULED")
  userId      Int

  @@map("posts")
}


